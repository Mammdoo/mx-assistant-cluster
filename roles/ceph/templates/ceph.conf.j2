[global]
fsid = {{ ceph_uuid }}
cluster = {{ ceph_name }}
mon_initial_members = {{ groups['ceph_mon'] | map('extract', hostvars, 'inventory_hostname') | join(',') }}
mon_host = {{ groups['ceph_mon'] | map('extract', hostvars, 'ansible_ssh_host') | join(',') }}
mon_allow_insecure_global_id_reclaim = false
auth_cluster_required = cephx
auth_service_required = cephx
auth_client_required = cephx
osd_pool_default_size = 1
osd_pool_default_min_size = 1
osd_pool_default_pg_num = 300
osd_crush_chooseleaf_type = 1
